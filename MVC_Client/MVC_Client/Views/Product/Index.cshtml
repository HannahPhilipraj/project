@model IEnumerable<MVC_Client.Models.ProductMVC>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: cadetblue;
    }

    tr:hover {
        background-color: moccasin;
    }

    .link:hover {
        color: black;
    }
</style>

<p>
    @Html.ActionLink("Create New", "AddorEdit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vendor_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.availability)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vendor_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.availability)
        </td>
        <td>
            <a href="@Url.Action("AddorEdit","Product",new { id = item.product_id })" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
            @Html.ActionLink("Buy", "BuyProduct", new { /* id=item.PrimaryKey */ }, new { @class = "link" }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "link" })
        </td>
    </tr>
}

</table>
